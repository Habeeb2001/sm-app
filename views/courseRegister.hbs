<link rel="stylesheet" href="/stylesheets/courseRegister.css">


<div class="container"> 
    {{>header}}
    
    <div class="regForm-container">
        <h1 class="heading">Register for course</h1>
        <div class="form-header">
            <div class="course-img" style="background-image: url('{{course.image}}');">
                <h1 id="serviceName" class="serviceName">{{course.service}}</h1>
                <h3> &#8358; <span id="servicePrice">{{course.fee}}</span></h3>
            </div>
        </div>
        <div class="form">
            <form>
                <div class="inputBox">
                    <input type="text" name="fullName" id="fullName" placeholder="full name:" />
                </div>
                <div class="inputBox">
                    <select name="gender"  id="gender">
                        <option value="gender" disabled>gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="inputBox">
                    <input type="text" name="email" id="email" placeholder="Email" />
                </div>
                <div class="inputBox">
                    <input type="phone" name="phone" id="phone" placeholder="phone no:" />
                </div>
                {{!-- <p>by clicking on the Register you get to make payment for your enrollment physically with us</p>
                --}}


                <div class="inputBox">
                    <button type="button" class="paymentBtn" id="paymentBtn">Pay now</button>

                </div>




            </form>
        </div>

    </div>

</div>

{{>sideNav}}
<script src="https://js.paystack.co/v1/inline.js"></script>

<script type="module" src="/javascripts/servicepay.js"></script>